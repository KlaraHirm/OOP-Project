                    <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <Button mnemonicParsing="false" fx:id="addTask" prefHeight="6.0" prefWidth="4.0" onAction="#addTask" text="+">
