        <TextArea fx:id="bodyField" layoutX="23.0" layoutY="148.0" prefHeight="89.0" prefWidth="573.0" promptText="Description" style="-fx-border-color: black;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="100.0" />
        <Label alignment="CENTER" layoutX="5.0" layoutY="27.0" prefHeight="17.0" prefWidth="700.0" text="Edit Card" textAlignment="CENTER" textFill="#2274a5" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="titleField" layoutX="23.0" layoutY="82.0" promptText="Title" style="-fx-border-color: black;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="520.0" />
        <FlowPane fx:id="listPane" layoutX="23.0" layoutY="280.0" orientation="VERTICAL" prefHeight="113.0" prefWidth="573.0" style="-fx-border-color: black;">
        </FlowPane>
        <HBox alignment="CENTER_LEFT" layoutX="23.0" layoutY="240.0" prefHeight="26.0" prefWidth="573.0" spacing="10.0">
            <children>
                <Label text="Subtasks" minWidth="60"/>
