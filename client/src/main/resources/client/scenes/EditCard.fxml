                <Cursor fx:constant="HAND" />
            </cursor></Button>
        <Button alignment="CENTER" layoutX="20.0" layoutY="450.0" mnemonicParsing="false" onAction="#submit" text="Submit" textFill="#2274a5">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor></Button>
    </children>
